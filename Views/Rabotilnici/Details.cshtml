@model ZplrmApp.Models.Rabotilnici

@{
    ViewBag.Title = "Работилници";
}
<link href="@Url.Content("~/Content/kendo.compatibility.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/kendo/2012.3.1315/kendo.common.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/kendo/2012.3.1315/kendo.uniform.min.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/kendo/2012.3.1315/jquery.min.js")"></script>
<script src="@Url.Content("~/Scripts/kendo/2012.3.1315/kendo.all.min.js")"></script>
<script src="@Url.Content("~/Scripts/kendo/2012.3.1315/kendo.aspnetmvc.min.js")"></script>
<script src="@Url.Content("~/Scripts/kendo.modernizr.custom.js")"></script>
<style type="text/css">
    .form-horizontal .controls {
        margin-left: 180px;
        margin-bottom: 5px;
        margin-top: 5px;
        font-weight: bold;
        font-size: 15px;
    }
    .form-horizontal .control-group {
        margin-bottom: 5px;
    }
    legend + .control-group {
        margin-top: 5px;
        -webkit-margin-top-collapse: separate;
    }
</style>

<form class="form-horizontal">
    <fieldset>
        <legend>Работилница</legend>
    
        <div class="control-group">
            <label class="control-label" for="TemaId">Тема</label>
            <div class="controls">
                @Html.DisplayFor(model => model.Temi.TemaIme)
            </div>
        </div>
  
        <div class="control-group">
            <label class="control-label" for="GradId">Град</label>
            <div class="controls">
                @Html.DisplayFor(model => model.Gradovi.GradIme)
            </div>
        </div>
  
        <div class="control-group">
            <label class="control-label" for="Mesto">Место</label>
            <div class="controls">
                @Html.DisplayFor(model => model.Mesto)
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="Lokacija">Локација</label>
            <div class="controls">
                @Html.DisplayFor(model => model.Lokacija)
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="Datum">Датум</label>
            <div class="controls">
                 @Html.DisplayFor(model => model.Datum,"ShortDateTime")
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="Pocetok">Почеток</label>
            <div class="controls">
                @Html.DisplayFor(model => model.Pocetok)
            </div>
        </div>
    
        <div class="control-group">
            <label class="control-label" for="Kraj">Крај</label>
            <div class="controls">
                @Html.DisplayFor(model => model.Kraj)
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="Bodovi">Бодови</label>
            <div class="controls">
                @Html.DisplayFor(model => model.Bodovi)
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="OptimumPosetiteli">Оптимум посетители</label>
            <div class="controls">
                @Html.DisplayFor(model => model.OptimumPosetiteli)
            </div>
        </div>
    </fieldset>
</form>
<p>
    @Html.ActionLink("Промени", "Edit", new {  id=Model.RabotilnicaId }) |
    @Html.ActionLink("Назад на листата", "Index")
</p>

<br />
<form class="form-horizontal">
    <fieldset>
        <legend>Пријавени доктори</legend>
        @(Html.Kendo().Grid((IEnumerable<ZplrmApp.Models.RabotilniciDoktoriViewModel>)ViewData["PrijaveniDoktori"])
            .Name("Grid")
            .Columns(columns =>
            {
               columns.Bound(p => p.DoktorFaksimil).Width(100).Title("Факсимил");
                columns.Bound(p => p.DoktorImePrezime).Title("Име презиме");
                columns.Template(@<text>@Html.ActionLink("Избриши", "Delete", "RabotilniciDoktori", new {  id=item.RabotilnicaDoktorId  },null)</text>).Width(70);
            })
        )
    </fieldset>
</form>